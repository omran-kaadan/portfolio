<script>
function showProjectImages(id) {
  var el = document.getElementById('project-images-' + id);
  if (el) {
    el.style.display = (el.style.display === 'none' || el.style.display === '') ? 'block' : 'none';
  }
}

// Fetch projects from /projects and render them
function renderProjects(projects) {
  var container = document.getElementById('projectsCards');
  container.innerHTML = '';
  projects.forEach(function(project) {
    var card = document.createElement('div');
    card.className = 'project-card';
    // Thumbnail
    if (project.thumbnail) {
      var thumb = document.createElement('img');
      thumb.src = project.thumbnail.url;
      thumb.alt = 'Thumbnail';
      thumb.className = 'project-thumb';
      card.appendChild(thumb);
    }
    var imagesDiv = document.createElement('div');
    imagesDiv.className = 'project-images';
    imagesDiv.style.display = 'none';
    project.otherImages.forEach(function(img) {
      var imgEl = document.createElement('img');
      imgEl.src = img.url;
      imgEl.alt = 'Project Image';
      imgEl.className = 'project-img';
      imagesDiv.appendChild(imgEl);
    });
    card.appendChild(imagesDiv);
    card.onclick = function() {
      if (imagesDiv.style.display === 'none' || imagesDiv.style.display === '') {
        imagesDiv.style.display = 'flex';
        card.classList.add('active');
      }
      else {
        imagesDiv.style.display = 'none';
        card.classList.remove('active');
      }
    };
  
    var title = document.createElement('h3');
    title.textContent = project.title;
    card.appendChild(title);
    var desc = document.createElement('p');
    desc.textContent = project.description;
    card.appendChild(desc);
    var meta = document.createElement('div');
    meta.className = 'project-meta';
    meta.innerHTML =  '</span>' +
      '<span>Tech Stack: ' + project.tech_stack + '</span>';
    card.appendChild(meta);
    container.appendChild(card);
  });
}

// Load projects on DOMContentLoaded
window.addEventListener('DOMContentLoaded', function() {
  fetch('/projects')
    .then(res => res.json())
    .then(data => renderProjects(data));
});
</script>
